<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_large"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/dimen_large">

        <TextView
            android:id="@+id/textview_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/github_text"
            android:textSize="@dimen/text_large"
            tools:text="This is the title"/>

        <TextView
            android:id="@+id/textview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/md_grey_700"
            android:textSize="@dimen/text_medium"
            tools:text="This is the subtitle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_500"
                android:textSize="@dimen/text_small"
                tools:text="C# • 53151 stars today • Built by"/>

            <ImageView
                android:id="@+id/imageview_owner"
                android:layout_width="@dimen/row_imageview_size"
                android:layout_height="@dimen/row_imageview_size"
                android:layout_marginLeft="@dimen/dimen_small"
                android:layout_marginStart="@dimen/dimen_small"
                android:contentDescription="@string/cd_owner"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_300"/>

</LinearLayout>